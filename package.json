{
  "name": "@outofaxis/fugo-ui-kit",
  "version": "1.0.0",
  "description": "React components Kit for Fugo",
  "scripts": {
    "prebuild": "npm run prettier && npm run lint && npm run test",
    "build": "tsc",
    "preversion": "npm run build",
    "postversion": "git push && git push --tags && npm publish",
    "test": "jest",
    "lint": "eslint -c ./package.json ./src",
    "prettier": "prettier --write './src/**/*.{ts,tsx}'",
    "prepare": "husky install",
    "start": "npm run storybook",
    "storybook": "npm run start:styles && start-storybook -p 6006",
    "build-storybook": "npm run build:styles && build-storybook",
    "chromatic": "npx chromatic --project-token=180e455a4e4b",
    "start:styles": "TAILWIND_MODE=watch postcss src/tailwind.css -o src/styles.css --watch",
    "build:styles": "postcss src/tailwind.css -o src/styles.css"
  },
  "files": [
    "lib/"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@date-io/date-fns": "^1.3.13",
    "@fortawesome/fontawesome-svg-core": "^6.1.2",
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@material-ui/core": "^4.12.4",
    "@material-ui/pickers": "^3.3.10",
    "@outofaxis/react-google-flight-datepicker": "^0.8.5",
    "@outofaxis/tailwind-fugo-preset": "^1.2.0",
    "@radix-ui/react-dropdown-menu": "^1.0.0",
    "@radix-ui/react-label": "^1.0.0",
    "@radix-ui/react-select": "^1.0.0",
    "@reach/checkbox": "^0.17.0",
    "@reach/combobox": "^0.17.0",
    "@reach/dialog": "^0.17.0",
    "@reach/disclosure": "^0.17.0",
    "@reach/menu-button": "^0.17.0",
    "@reach/popover": "^0.17.0",
    "@reach/rect": "^0.17.0",
    "@reach/slider": "^0.17.0",
    "@reach/tabs": "^0.17.0",
    "@reach/tooltip": "^0.17.0",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/node-logger": "^6.5.10",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.182",
    "@types/react": "^18.0.17",
    "@types/uuid": "^8.3.4",
    "autoprefixer": "^10.4.8",
    "chromatic": "^6.7.3",
    "date-fns": "^2.29.1",
    "eslint": "^8.21.0",
    "eslint-config-react-app": "^7.0.1",
    "husky": "^8.0.1",
    "i18next": "^21.9.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-device-detect": "^2.2.2",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.18.3",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "svg-jest": "^1.0.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4",
    "use-debounce": "^8.0.3",
    "use-media": "^1.4.0",
    "uuid": "^8.3.2"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "args": "none"
        }
      ],
      "import/no-anonymous-default-export": 0
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write --ignore-unknown",
    "src/**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "src/**/*.{ts,tsx}": "bash -c tsc --noEmit"
  }
}
